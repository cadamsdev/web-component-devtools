{
  "name": "vite-web-component-dev-tools-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Vite Web Component Dev Tools plugin and examples",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=apps/react-lit-example",
    "build:plugin": "npm run build --workspace=packages/vite-web-component-dev-tools"
  },
  "keywords": [
    "vite",
    "plugin",
    "web-components",
    "dev-tools",
    "monorepo"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
