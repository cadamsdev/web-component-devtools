{
  "name": "lit-components",
  "version": "0.1.0",
  "description": "Reusable Lit UI component library",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "web-components",
    "lit",
    "ui-components",
    "custom-elements"
  ],
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
