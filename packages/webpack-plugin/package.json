{
  "name": "@cadamsdev/webpack-plugin-wc-devtools",
  "version": "0.1.2",
  "description": "A Webpack plugin that provides developer tools for inspecting web components",
  "keywords": [
    "custom-elements",
    "dev-tools",
    "plugin",
    "web-components",
    "webpack"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch"
  },
  "dependencies": {
    "@cadamsdev/wc-devtools-client": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.3.3",
    "webpack": "^5.0.0"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  }
}
