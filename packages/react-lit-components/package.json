{
  "name": "react-lit-components",
  "version": "0.1.0",
  "description": "React wrapper components for lit-components",
  "keywords": [
    "custom-elements",
    "lit",
    "react",
    "react-components",
    "web-components"
  ],
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "lit-components": "workspace:*"
  },
  "devDependencies": {
    "@lit/react": "^1.0.0",
    "@types/react": "^18.2.43",
    "react": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@lit/react": "^1.0.0",
    "react": "^18.0.0"
  }
}
