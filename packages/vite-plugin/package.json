{
  "name": "@cadamsdev/vite-plugin-wc-devtools",
  "version": "0.0.2",
  "description": "A Vite plugin that provides developer tools for inspecting web components",
  "keywords": [
    "custom-elements",
    "dev-tools",
    "plugin",
    "vite",
    "web-components"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch"
  },
  "dependencies": {
    "@cadamsdev/wc-devtools-client": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.3.3",
    "vite": "^7.0.0"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  }
}
